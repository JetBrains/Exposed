root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
max_line_length = 300

[{*.sh,gradlew}]
end_of_line = lf

[{*.bat,*.cmd}]
end_of_line = crlf

[*.md]
# Trailing space means "paragraph continues" in markdown
trim_trailing_whitespace = false

[*.{kt,kts}]
disabled_rules=filename,no-wildcard-imports
